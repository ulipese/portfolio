{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "plugin:react/recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-unused-expressions": "warn",
        "react/react-in-jsx-scope": "off",
        "react/jsx-one-expression-per-line": "off",
        "allowShortCircuit": 0
      },
      "overrides": [
        {
          "files": ["*.test.js", "*.spec.js"],
          "rules": {
            "no-unused-expressions": "off",
            "allowShortCircuit": 0
          }
        }
      ]
}
